
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_SecurityLayout.cshtml";
}

<div class="registration-container">
    <div class="registration-box animated fadeInDown">
        <div class="registration-logo"></div>
        <div class="registration-body">
            <div class="registration-title"><strong>Forgot</strong> Password?</div>
            <form action="/" class="form-horizontal" method="post">
                <h4>Your E-mail</h4>
                <div class="form-group">
                    <div class="col-md-12">
                        <input type="text" class="form-control" placeholder="email@domain.com" />
                    </div>
                </div>
                <div class="form-group push-up-20">
                    <div class="col-md-6">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-link btn-block">Log In</a>
                    </div>
                    <div class="col-md-6">
                        <button class="btn btn-danger btn-block">Send me my Password</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>